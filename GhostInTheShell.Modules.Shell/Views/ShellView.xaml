<UserControl x:Class="GhostInTheShell.Modules.Shell.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GhostInTheShell.Modules.Shell.Views"
             xmlns:localViewModel="clr-namespace:GhostInTheShell.Modules.Shell.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type localViewModel:ShellViewModel}}"
             xmlns:prism="http://prismlibrary.com/"
             Width="{Binding ShellSize.Width}" Height="{Binding ShellSize.Height}">

    <Image Width="{Binding ShellSize.Width}" Height="{Binding ShellSize.Height}" Source="{Binding ShellSource}"/>
</UserControl>
